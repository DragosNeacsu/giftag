@using System.Threading
@{
    ViewBag.Title = "Home";
}
<h1>Create a fake boarding pass and make a better gift</h1>
<br />
<form action="@Thread.CurrentThread.CurrentCulture/PayPal/PayWithPaypal" method="POST">
    <div class="container" id="details">
        <input type="hidden" id="language" value="en" />
        <div class="row">
            <div class="form-group col-sm-4">
                <label for="firstName" class="col-form-label">@GlobalRes.FirstName</label>
                <input type="text" name="firstname" class="form-control" id="firstName">
            </div>
            <div class="form-group col-sm-4">
                <label for="lastName" class="col-form-label">@GlobalRes.LastName</label>
                <input type="text" name="lastname" class="form-control" id="lastName">
            </div>
            <div class="form-group col-sm-4">
                <label for="email" class="col-form-label">@GlobalRes.Email</label>
                <input type="text" name="email" class="form-control" id="email">
            </div>
        </div>
        <div class="row">
            <div class="form-group col-sm-4">
                <label for="from">@GlobalRes.DepartFrom</label>
                <input type="text" name="from" class="form-control destination-autocomplete" id="from" />
            </div>
            <div class="form-group col-sm-4">
                <label for="to">@GlobalRes.Destination</label>
                <input type="text" name="to" class="form-control destination-autocomplete" id="to">
            </div>
            <div class="form-group col-sm-4">
                <label for="flightNumber">@GlobalRes.FlightNumber</label>
                <input type="text" name="flightNumber" class="form-control" id="flightNumber">
            </div>
        </div>
        <div class="row">
            <div class="form-group col-sm-4">
                <label for="flightDate" class="col-form-label">@GlobalRes.DepartureDate</label>
                <input class="form-control" name="flightDate" type="date" value="2017-08-19" id="flightDate">
            </div>
            <div class="form-group col-sm-4">
                <label for="boardingTime" class="col-form-label">@GlobalRes.BoardingTime</label>
                <input class="form-control" type="time" name="boardingTime" value="13:45:00" id="boardingTime">
            </div>
            <div class="form-group col-sm-4">
                <label for="airline">@GlobalRes.Airline</label>
                <input type="text" name="airline" class="form-control" id="airline">
                <input type="hidden" name="airlineLogo" id="airlineLogo" />
            </div>
        </div>
        <div class="row">
            <div class="form-group col-sm-4">
                <label for="gate">@GlobalRes.Gate</label>
                <input type="text" name="gate" class="form-control" id="gate">
            </div>
            <div class="form-group col-sm-4">
                <label for="seat">@GlobalRes.Seat</label>
                <input type="text" name="seat" class="form-control" id="seat">
            </div>
            <div class="form-group col-sm-4">
                <label for="class">@GlobalRes.Class</label>
                <select class="form-control" id="class" name="class">
                    <option value="economy">@GlobalRes.Economy</option>
                    <option value="premium_economy">@GlobalRes.PremiumEconomy</option>
                    <option value="first_class">@GlobalRes.FirstClass</option>
                    <option value="business">@GlobalRes.Business</option>
                </select>
            </div>
        </div>
        <br />
        <button type="button" id="next" class="btn btn-primary pull-right">@GlobalRes.Next</button>
    </div>
    <div class="container" id="template">
        <h2>Choose a template for your ticket</h2>
        <div class="row">
            <div class="col col-sm-6 selected">
                <span class="select-icon"></span>
                <img data-id="1" src="~/Content/TicketTemplate/template_1.png" />
            </div>
            <div class="col col-sm-6">
                <span class="select-icon"></span>
                <img data-id="2" src="~/Content/TicketTemplate/template_1.png" />
            </div>
        </div>
        <div class="row">
            <div class="col col-sm-6">
                <span class="select-icon"></span>
                <img data-id="3" src="~/Content/TicketTemplate/template_1.png" />
            </div>
            <div class="col col-sm-6">
                <span class="select-icon"></span>
                <img data-id="4" src="~/Content/TicketTemplate/template_1.png" />
            </div>
        </div>
        <div class="row">
            <div class="col col-sm-6">
                <span class="select-icon"></span>
                <img data-id="5" src="~/Content/TicketTemplate/template_1.png" />
            </div>
            <div class="col col-sm-6">
                <span class="select-icon"></span>   
                <img data-id="6" src="~/Content/TicketTemplate/template_1.png" />
            </div>
        </div>
        <input type="hidden" name="template" value="1" />
        <br />
        <button type="button" id="back" class="btn btn-primary pull-left">@GlobalRes.Back</button>
        <button type="submit" class="btn btn-primary pull-right">@GlobalRes.Submit</button>
    </div>
</form> 